<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_include_titlebar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/toolbar_backgroundcolor_blue" >

    <TextView
        android:id="@+id/tv_left_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/bg_titlebar_selector"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:minWidth="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_title_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_right_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@drawable/bg_titlebar_selector"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:minWidth="50dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/remind_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:contentDescription="@null"
        android:src="@drawable/icon_titlebar_remind" />

</FrameLayout>